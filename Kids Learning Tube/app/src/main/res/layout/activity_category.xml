<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Category"
    android:orientation="vertical"
    android:background="#ebebeb"
   >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Kid's Learning Tube"
                android:layout_centerVertical="true"
                android:textColor="#ffff"
                android:textSize="17sp"
                android:textStyle="bold"
               />
            <Button
                android:id="@+id/details"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_info_outline_black_24dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:layout_centerVertical="true">


    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/playlist1"
        style="?android:attr/borderlessButtonStyle">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/animal"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Animal Sounds Song"
            android:layout_gravity="center"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="5dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/playlist2"
        android:layout_toRightOf="@+id/playlist1"
        android:layout_marginLeft="20dp"

       >
        <ImageView
            android:id="@+id/img2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/zoo"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Animal Sound and more!"
            android:layout_gravity="center"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="5dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/playlist3"
      android:layout_below="@+id/playlist1"
        android:layout_marginTop="10dp"
       >
        <ImageView
            android:id="@+id/img3"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/third"

            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Zoo Animals for Kids"
            android:layout_gravity="center"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="5dp"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/playlist4"
        android:layout_below="@+id/playlist2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/playlist3"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img4"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/fourth"

            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Kid's Animal and Nursery"
            android:layout_gravity="center"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="5dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/playlist5"
        android:layout_below="@+id/playlist4"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/img5"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/fifth"
           />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Animals for Kids"
            android:layout_gravity="center"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="5dp"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/playlist6"
        android:layout_below="@+id/playlist4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/playlist5"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img6"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/sixth"
            android:layout_marginLeft="10dp"
           />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Learning Animal Sounds"
            android:layout_gravity="center"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="5dp"/>
    </android.support.v7.widget.CardView>




</RelativeLayout>





</LinearLayout>