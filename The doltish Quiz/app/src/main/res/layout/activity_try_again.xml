<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TryAgain"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="100dp"
       >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Failed To Complete!"
           android:gravity="center"
           android:textColor="#ffff"
           android:textSize="30dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:textStyle="bold"/>
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Failed"
        android:textColor="#ffff"
        android:gravity="center"
        android:id="@+id/wrong"
        android:textSize="25sp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atleast 5 Correct to Unlock Next Level "
        android:textColor="#ffff"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/tryagain"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/restart"
        android:background="@drawable/tryagainbtn"
      android:text="Try Again"
        android:paddingTop="5sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"


        />
    <Button
        android:id="@+id/watch"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/watch_vid"
        android:background="@drawable/tryagainbtn"
        android:gravity="center"
        android:height="60dp"
        android:padding="5sp"
        android:text="Watch to Unlock"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"

        />


</LinearLayout>