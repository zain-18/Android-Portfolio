<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="The Doltish Test"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/textview"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <Button
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn1"
                android:text="LEVEL 1 "
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Level1"

                />

            <Button
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/disablelevel2"
                android:text="LEVEL 2 "
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Level2"
                android:enabled="false"


                />

            <Button
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/disablelevel3"
                android:text="LEVEL 3 "
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Level3"
                />

            <Button
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/disablelevel4"
                android:text="LEVEL 4 "
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Level4"/>

            <Button
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/disablelevel5"
                android:text="LEVEL 5 "
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Level5"/>

            <Button
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/disablelevel6"
                android:text="LEVEL 6 "
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Level6"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>